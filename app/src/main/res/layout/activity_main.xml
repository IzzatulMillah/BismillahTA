<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#067962"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.izzatul.bismillahta.MainActivity">
    <!--TODO background menggunakan blur image agar tulisan menu terlihat-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <!--TODO ukuran, warna garis dan teks putih. bisa menggunakan coding atau gambar editan-->
    <Button
        android:id="@+id/btnMateri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/materi"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSoalLatihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/latihan"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnKalkulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/kalkulator"
        android:textSize="18sp"
        tools:layout_width="wrap_content" />

    <Button
        android:id="@+id/btnTentangAplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:onClick=""
        android:text="@string/tentang"
        android:textSize="18sp" />

</LinearLayout>
